<div id="productPopup" class="modal">
    <div class="modal-content">
        <h3>📦 Select a Product</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="productList">
                <!-- 제품 목록이 여기에 추가됨 -->
            </tbody>
        </table>

        <button onclick="closeProductPopup()" class="btn btn-danger">❌ Close</button>
    </div>
</div>
